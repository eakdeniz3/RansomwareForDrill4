@code {

    [Parameter]
    public Menu Menu { get; set; }

    [Parameter]
    public bool CollapseNavMenu { get; set; } = false;

    public void ActiveMenu(Menu menu)
    {
        menu.IsActive = !menu.IsActive;
    }














}
