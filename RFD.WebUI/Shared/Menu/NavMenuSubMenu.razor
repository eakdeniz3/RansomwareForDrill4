                </span>
            </span>
            <span class="menu-title">@Menu.Name</span>
            <span class="menu-arrow"></span>
        </span>
        <div class="menu-sub menu-sub-accordion menu-active-bg @(Menu.IsActive ? "show" : "")" style="@(!Menu.IsActive ? "display: none; overflow: hidden;" : "")" kt-hidden-height="308">
            @foreach (var item in Menu.SubMenu)
            {
                <NavMenuSubMenu Menu="item"></NavMenuSubMenu>
