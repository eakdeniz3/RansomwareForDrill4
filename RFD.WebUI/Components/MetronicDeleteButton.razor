<a class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" @onclick="()=>{IsVisible=true;}">
    <span class="svg-icon svg-icon-danger svg-icon-3">
        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <rect x="0" y="0" width="24" height="24"></rect>
                <path d="M6,8 L6,20.5 C6,21.3284271 6.67157288,22 7.5,22 L16.5,22 C17.3284271,22 18,21.3284271 18,20.5 L18,8 L6,8 Z" fill="#000000" fill-rule="nonzero"></path>
                <path d="M14,4.5 L14,4 C14,3.44771525 13.5522847,3 13,3 L11,3 C10.4477153,3 10,3.44771525 10,4 L10,4.5 L5.5,4.5 C5.22385763,4.5 5,4.72385763 5,5 L5,5.5 C5,5.77614237 5.22385763,6 5.5,6 L18.5,6 C18.7761424,6 19,5.77614237 19,5.5 L19,5 C19,4.72385763 18.7761424,4.5 18.5,4.5 L14,4.5 Z" fill="#000000" opacity="0.3"></path>
            </g>
        </svg>
    </span>
</a>



@if (IsVisible)
{
    <div class="swal2-container swal2-center swal2-backdrop-show" style="overflow-y: auto;">
        <div class="swal2-popup swal2-modal swal2-icon-error swal2-show" tabindex="-1" style="display: grid;">
            <button type="button" class="swal2-close" aria-label="Close this dialog" @onclick="()=>{IsVisible=false;}">×</button>
            <div class="swal2-icon swal2-warning swal2-icon-show" style="display: flex;"><div class="swal2-icon-content">!</div></div>

            <div class="swal2-html-container" id="swal2-html-container" style="display: block;">
                @if (!string.IsNullOrEmpty(Message))
                {
                    @Message
                }
                else
                {
                    <p>Silmek istediğinize emin misiniz?</p>
                }



            </div>

            <div class="swal2-actions" style="display: flex;">
                <div class="swal2-loader"></div>
                
                <button type="button" class="swal2-confirm btn btn-primary" aria-label="" style="display: inline-block;"  @onclick="async ()=>{if(!isBusy){ await Delete(Id);}}">Evet, silinsin.</button>
               <button type="button" class="swal2-cancel btn btn-active-light" aria-label="" style="display: inline-block;" @onclick="()=>{IsVisible=false;}">Hayır, silinmesin</button>
            </div>


        </div>

    </div>
}